							<num>-</num>
							<corpo>
								<mod id="mod2">
									è soppressa la
									<rif xlink:href="urn:nir:regione.molise:legge:1995-05-03;19#art3-com1-leth" xlink:type="simple">lettera h) del comma 1</rif>
